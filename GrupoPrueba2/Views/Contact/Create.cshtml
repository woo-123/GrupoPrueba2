@model GrupoPrueba2.Models.Contact
@{
    ViewData["Title"] = "Contacto";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Formulario de Contacto</h1>
    
    <form asp-controller="Contact" asp-action="Create">
        
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control form-control-sm" type="text" placeholder="Escribe un correo" aria-label=".form-control-sm" />

        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />

        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />

        <label asp-for="Comment" class="control-label"></label>
        <input asp-for="Comment" class="form-control"/>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Registrar</button> 
        </div>
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index">Back to list</a>
    </div>
</div>